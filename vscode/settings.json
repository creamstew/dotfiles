{
  "breadcrumbs.enabled": true, // パンくずエリアにフォルダ階層を表示させる
  "diffEditor.renderSideBySide": false, // Git の差分を行内に表示
  "editor.codeActionsOnSave": {
    // 保存時に実行されるコードアクションの種類
    "source.fixAll": true
  },
  "editor.colorDecorators": false, // カラーデコレーターを非表示
  "editor.suggestSelection": "first", // サジェスト一覧の初期表示項目設定
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue", // サジェスト一覧の初期表示項目設定
  "editor.minimap.enabled": false, // ミニマップを非表示
  "editor.multiCursorModifier": "ctrlCmd", // マウスでの複数選択時の修飾キーを変更
  "editor.renderControlCharacters": true, // 制御文字を表示
  "editor.renderLineHighlight": "all", // 選択行を行番号含めすべてハイライト
  "editor.renderWhitespace": "all", // 半角スペースを常に表示
  "editor.snippetSuggestions": "top", // Emmet などのスニペット候補を優先して表示
  "editor.tabSize": 2, // タブのサイズ変更
  "editor.wordWrap": "on", // エディターの幅で折り返し
  "editor.fontSize": 15, // フォントサイズ
  "emmet.showSuggestionsAsSnippets": true, // Emmet の候補を表示
  "emmet.triggerExpansionOnTab": true, // TAB キーで Emmet を展開できるようにする
  "emmet.variables": {
    // Emmet で展開される HTML の言語を変更
    "lang": "ja"
  },
  "extensions.autoUpdate": false, // 自動でアップデートしない
  "files.associations": {
    // ファイルと言語の関連付けを変更
    ".*lintrc": "json"
  },
  "files.insertFinalNewline": true, // ファイルの保存時に末尾を改行
  // 「ファイル モニタリングから除外するファイル パスの glob パターンを構成します。
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/vendor/**": true
  },
  // ファイル検索の除外設定
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/bundle": true,
    "**/composer": true,
    "**/tmp": true,
    "**/.tmp": true
  },
  "files.trimFinalNewlines": true, // ファイルの保存時に最終行以降をトリミング
  "files.autoSave": "onFocusChange", // エディタがフォーカスを失った時点で、ファイルを自動的に保存する
  "[markdown]": {
    "files.trimTrailingWhitespace": false // Markdown のファイルは行末の空白をトリミングしない
  },
  "html.format.contentUnformatted": "pre, code, textarea, title, h1, h2, h3, h4, h5, h6, p", // タグ内の記述はフォーマットしない
  "html.format.extraLiners": "", // head, body, /html タグの前に改行を入れない
  "html.format.indentInnerHtml": true,
  "html.format.unformatted": null, // フレージング・コンテンツ（旧インライン要素のようなタグ）はフォーマットしない
  "html.format.wrapLineLength": 0, // 行の文字数制限を無くし自動で改行させない
  "ruby.lint": {
    "rubocop": true
},
  "terminal.integrated.fontSize": 15, // Welcome Page を表示しない
  "terminal.integrated.scrollback": 10000, // ターミナルのスクロールバッファを10000にする 
  "window.openFoldersInNewWindow": "on", // 新規ワークスペースを別ウインドウで開く
  "window.title": "${activeEditorMedium}${separator}${rootName}", // ウインドウ上部に表示する文字列の設定
  "workbench.editor.labelFormat": "short", // タブに表示する文字列の設定
  "workbench.editor.tabSizing": "shrink", // タブの表示設定
  "workbench.editor.enablePreview": true, // 開かれるエディターをプレビューとして表示する
  "workbench.editor.enablePreviewFromQuickOpen": false, // Quick Open で開いたエディター をプレビューとして表示しない
  "workbench.list.openMode": "doubleClick", // ツリーやリスト内のアイテム選択やツリー展開がダブルクリックになる
  "workbench.startupEditor": "none", // Welcome Page を表示しない
  "workbench.colorTheme": "GitHub Dark", // カラーテーマ
  "workbench.iconTheme": "material-icon-theme", // アイコンテーマ
  "[shellscript]": {
    "editor.detectIndentation": false, // インデント設定を自動判別しない
    "editor.defaultFormatter": "foxundermoon.shell-format" // デフォルト整形ツール
  },
  "window.zoomLevel": 3, // Windowの表示サイズ
  "diffEditor.ignoreTrimWhitespace": false, // 差分エディタが差分として空白文字を導かない、あるいは追跡する変更を表示しない
  "gitlens.gitCommands.closeOnFocusOut": true,
  "[css]": {
    "editor.suggest.insertMode": "replace"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always"
}
